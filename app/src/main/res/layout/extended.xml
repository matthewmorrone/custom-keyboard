        <Key android:codes="104" android:keyLabel="h" android:popupCharacters="@string/popup_h" android:popupKeyboard="@layout/popup_template" />
        <Key android:codes="106" android:keyLabel="j" android:popupCharacters="@string/popup_j" android:popupKeyboard="@layout/popup_template" />
        <Key android:codes="107" android:keyLabel="k" android:popupCharacters="@string/popup_k" android:popupKeyboard="@layout/popup_template" />
