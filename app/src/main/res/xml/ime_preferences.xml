<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ListPreference   android:title="@string/theme"    android:key="theme"   android:defaultValue="1" android:entryValues="@array/theme_values"     android:entries="@array/theme" />
    <SwitchPreference android:title="@string/rainbow"  android:key="rainbow" android:defaultValue="false" />
    <EditTextPreference android:title="@string/foreground" android:dialogTitle="Foreground" android:summary="" android:dependency="rainbow" android:key="fg" android:defaultValue="#FFFFFF" android:dialogMessage="Doesn't work yet." />
    <EditTextPreference android:title="@string/background" android:dialogTitle="Background" android:summary="" android:dependency="rainbow" android:key="bg" android:defaultValue="#000000" android:dialogMessage="Doesn't work yet." />
    <SwitchPreference android:title="@string/debug" android:key="debug" android:defaultValue="false" />
    <SwitchPreference android:title="@string/vib" android:key="vib" android:defaultValue="false" />
    <SwitchPreference android:title="@string/borders" android:key="bord" android:defaultValue="false" />
    <SwitchPreference android:title="@string/cursor_left" android:key="cursor_left" android:defaultValue="false" />
    <SwitchPreference android:title="@string/names" android:key="names" android:defaultValue="true" />
    <SwitchPreference android:title="@string/pairs" android:key="pairs" android:defaultValue="false" />
    <SwitchPreference android:title="@string/auto" android:key="auto" android:defaultValue="false" />
    <SwitchPreference android:title="@string/spaces" android:key="spaces" android:defaultValue="true" />
    <SwitchPreference android:title="@string/indent" android:key="indent" android:defaultValue="true" />
    <SwitchPreference android:title="@string/dot" android:key="dot" android:defaultValue="false" />
    <SwitchPreference android:title="@string/caps" android:key="caps" android:defaultValue="false" />
    <SwitchPreference android:title="@string/shift" android:key="shift" android:defaultValue="false" />
    <SwitchPreference android:title="@string/prediction" android:key="pred" android:defaultValue="false" />
    <EditTextPreference android:title="@string/text_size" android:dialogTitle="Text Size"       android:summary="@dimen/text_size"          android:key="text_size" android:defaultValue="@dimen/text_size" android:inputType="number" android:dialogMessage="Doesn't work yet." />
    <EditTextPreference android:title="Word Separators"   android:dialogTitle="Word Separators" android:summary="@string/word_separators"   android:key="seps"      android:defaultValue="@string/word_separators" />
    <EditTextPreference android:title="Popup 1"           android:dialogTitle="Popup 1"         android:summary="@string/popup1"            android:key="popup1"    android:defaultValue="@string/popup1" android:dialogMessage="Doesn't work yet." />
    <EditTextPreference android:title="Popup 2"           android:dialogTitle="Popup 2"         android:summary="@string/popup2"            android:key="popup2"    android:defaultValue="@string/popup2" android:dialogMessage="Doesn't work yet." />
    <EditTextPreference android:title="Popup 3"           android:dialogTitle="Popup 3"         android:summary="@string/popup3"            android:key="popup3"    android:defaultValue="@string/popup3" android:dialogMessage="Doesn't work yet." />
    <EditTextPreference 
        android:dialogTitle="Layout Order" 
        android:title="Layout Order" 
        android:persistent="true"
        android:key="layout_order" 
        android:lines="3"
        android:defaultValue="" 
        />
    <PreferenceCategory android:key="hint" android:title="Hints">
        <SwitchPreference android:title="Hints"  android:key="hints" android:defaultValue="false" />
        <SwitchPreference android:title="Hint 1" android:key="hint1" android:defaultValue="true"  android:dependency="hints" />
        <SwitchPreference android:title="Hint 2" android:key="hint2" android:defaultValue="true"  android:dependency="hints" />
        <SwitchPreference android:title="Hint 3" android:key="hint3" android:defaultValue="false" android:dependency="hints" />
        <SwitchPreference android:title="Hint 4" android:key="hint4" android:defaultValue="false" android:dependency="hints" />
    </PreferenceCategory>
    <PreferenceCategory android:key="layout_list" android:title="Layouts">
        <CheckBoxPreference android:key="font_layout_switch"   android:title="Fonts"       android:defaultValue="true" />
        <CheckBoxPreference android:key="code_layout_switch"   android:title="Symbols"     android:defaultValue="true" />
        <CheckBoxPreference android:key="lang_layout_switch"   android:title="Languages"   android:defaultValue="true" />
        <CheckBoxPreference android:key="main_layout_switch"   android:title="Main"        android:defaultValue="true" />
        <!-- <PreferenceCategory android:key="font_layouts" android:title="Fonts"> -->
            <CheckBoxPreference android:key="fonts"     android:title="Fonts"       android:defaultValue="true" android:dependency="font_layout_switch" />
            <CheckBoxPreference android:key="funthork"  android:title="Funthork"    android:defaultValue="true" android:dependency="font_layout_switch" />
            <!-- <CheckBoxPreference android:key="morse"     android:title="Morse"       android:defaultValue="true" android:dependency="_layout_switch" /> -->
            <CheckBoxPreference android:key="braille"   android:title="Braille"     android:defaultValue="true" android:dependency="font_layout_switch" />
