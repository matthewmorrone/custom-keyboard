            <CheckBoxPreference android:key="tails"     android:title="Tails"       android:defaultValue="true" android:dependency="font_layout_switch" />
            <CheckBoxPreference android:key="smallcaps" android:title="Smallcaps"   android:defaultValue="true" android:dependency="font_layout_switch" />
            <!-- <CheckBoxPreference android:key="strike"    android:title="Strike"      android:defaultValue="true" android:dependency="_layout_switch" /> -->
            <CheckBoxPreference android:key="insular"   android:title="Insular"     android:defaultValue="true" android:dependency="font_layout_switch" />
            <CheckBoxPreference android:key="fancy"     android:title="Fancy"       android:defaultValue="true" android:dependency="font_layout_switch" />
        <!-- </PreferenceCategory> -->
        <!-- <PreferenceCategory android:key="code_layouts" android:title="Symbols"> -->
            <CheckBoxPreference android:key="emoji"     android:title="Emoji"       android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="symbol"    android:title="Symbol"      android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="coding"    android:title="Coding"      android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="dvorak"    android:title="Dvorak"      android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="extra"     android:title="Extra"       android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="ipa"       android:title="IPA"         android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="lisu"      android:title="Lisu"        android:defaultValue="true" android:dependency="code_layout_switch" />
            <CheckBoxPreference android:key="math"      android:title="Math"        android:defaultValue="true" android:dependency="code_layout_switch" />
            <!-- <CheckBoxPreference android:key="accents"   android:title="Accents"     android:defaultValue="true" /> -->
        <!-- </PreferenceCategory> -->
        <!-- <PreferenceCategory android:key="lang_layouts" android:title="Languages"> -->
            <CheckBoxPreference android:key="coptic"    android:title="Coptic"      android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="etruscan"  android:title="Etruscan"    android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="cree"      android:title="Cree"        android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="cyrillic"  android:title="Cyrillic"    android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="futhark"   android:title="Futhark"     android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="gothic"    android:title="Gothic"      android:defaultValue="true" android:dependency="lang_layout_switch" />
            <CheckBoxPreference android:key="greek"     android:title="Greek"       android:defaultValue="true" android:dependency="lang_layout_switch" />
        <!-- </PreferenceCategory> -->
        <!-- <PreferenceCategory android:key="main_layouts" android:title="Main"> -->
            <CheckBoxPreference android:key="utility"   android:title="Utility"     android:defaultValue="true" android:dependency="main_layout_switch" />
            <CheckBoxPreference android:key="numeric"   android:title="Numeric"     android:defaultValue="true" android:dependency="main_layout_switch" />
            <CheckBoxPreference android:key="function"  android:title="Function"    android:defaultValue="true" android:dependency="main_layout_switch" />
            <CheckBoxPreference android:key="unicode"   android:title="Unicode"     android:defaultValue="true" android:dependency="main_layout_switch" />
            <CheckBoxPreference android:key="nav"       android:title="Navigation"  android:defaultValue="true" android:dependency="main_layout_switch" />
        <!-- </PreferenceCategory> -->
    </PreferenceCategory>
    <PreferenceCategory android:key="custom_keys" android:title="Custom Keys">
        <EditTextPreference android:dialogTitle="Custom Key 1" android:title="@string/k1" android:key="k1" android:defaultValue="@string/k1" />
        <EditTextPreference android:dialogTitle="Custom Key 2" android:title="@string/k2" android:key="k2" android:defaultValue="@string/k2" />
