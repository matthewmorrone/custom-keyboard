<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/wordsLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:clickable="true"
                                                   android:background="@color/black"
                                                   android:divider="#ffffff"
                                                   android:orientation="horizontal">
    <TextView
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/close"

        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/go"

        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <EditText
        android:id="@+id/find"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:hint="@string/find"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/close"
        app:layout_constraintWidth_percent=".38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
   <EditText
        android:id="@+id/repl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:hint="@string/replace"
        android:text=""
        app:layout_constraintRight_toLeftOf="@id/go"
        app:layout_constraintWidth_percent=".38"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/find"
        app:layout_constraintRight_toLeftOf="@id/repl"
        app:layout_constraintWidth_percent=".04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
