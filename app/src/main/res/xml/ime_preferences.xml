        <EditTextPreference android:dialogTitle="Custom Key 4" android:title="@string/k4" android:key="k4" android:defaultValue="@string/k4" />
        <EditTextPreference android:dialogTitle="Custom Key 5" android:title="@string/k5" android:key="k5" android:defaultValue="@string/k5" />
        <EditTextPreference android:dialogTitle="Custom Key 6" android:title="@string/k6" android:key="k6" android:defaultValue="@string/k6" />
        <EditTextPreference android:dialogTitle="Custom Key 7" android:title="@string/k7" android:key="k7" android:defaultValue="@string/k7" />
        <EditTextPreference android:dialogTitle="Custom Key 8" android:title="@string/k8" android:key="k8" android:defaultValue="@string/k8" />
    </PreferenceCategory>
