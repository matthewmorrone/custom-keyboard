<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:keyWidth="10%p">
          android:keyHeight="7%p">
    <Row>
        <Key android:codes="-5"   android:keyIcon="@drawable/ic_backspace" android:horizontalGap="80%p" />
        <Key android:codes="-7"   android:keyIcon="@drawable/ic_delete"   />
    </Row>
    <Row>
        <Key android:codes="-22"  android:keyIcon="@drawable/ic_settings"        android:keyWidth="12.5%p" />
        <Key android:codes="-101" android:keyIcon="@drawable/ic_swap"            android:keyWidth="12.5%p" />
        <Key android:codes="32"   android:keyIcon="@drawable/ic_space"           android:keyWidth="50%p" />
        <Key android:codes="10"   android:keyIcon="@drawable/ic_keyboard_return" android:keyWidth="25%p" />
    </Row>
</Keyboard>
