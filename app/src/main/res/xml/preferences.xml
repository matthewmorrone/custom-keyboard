<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen android:title="Behavior">
        <SwitchPreference android:defaultValue="false" android:key="sound" android:title="@string/sound" />
        <SwitchPreference android:defaultValue="false" android:key="ipa" android:title="@string/ipa_sounds" />
        <SwitchPreference android:defaultValue="false" android:key="ipa_desc" android:title="@string/ipa_desc" />
        <SwitchPreference android:defaultValue="false" android:key="vib" android:title="@string/vib" />
        <SwitchPreference android:defaultValue="false" android:key="preview" android:title="@string/preview" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Editing">
        <SwitchPreference android:defaultValue="false" android:key="pred" android:title="@string/pred" />
        <SwitchPreference android:defaultValue="false" android:key="auto" android:title="@string/auto" />
        <SwitchPreference android:defaultValue="false" android:key="pairs" android:title="@string/pairs" />
        <SwitchPreference android:defaultValue="false" android:key="shift" android:title="@string/toggle_case" />
        <SwitchPreference android:defaultValue="false" android:key="caps" android:title="@string/caps" />
        <SwitchPreference android:defaultValue="false" android:key="indent" android:title="@string/indent" />
        <SwitchPreference android:defaultValue="false" android:key="tabs" android:title="@string/tabs" />
        <EditTextPreference android:defaultValue="4" android:digits="1234567890" android:inputType="number" android:key="indent_width" android:title="@string/indent_width" android:dialogTitle="@string/indent_width" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Appearance">
        <com.custom.keyboard.SeekPreference android:key="height"       android:title="@string/key_height"       app:max="150" app:min="50" app:value="100" />
        <com.custom.keyboard.SeekPreference android:key="transparency" android:title="@string/key_transparency" app:value="100" />
        <EditTextPreference android:defaultValue="0"  android:digits="1234567890" android:inputType="number" android:key="border_width"       android:title="@string/border_width"       android:dialogTitle="@string/border_width" />
        <EditTextPreference android:defaultValue="0"  android:digits="1234567890" android:inputType="number" android:key="padding_width"      android:title="@string/padding_width"      android:dialogTitle="@string/padding_width" />
        <EditTextPreference android:defaultValue="0"  android:digits="1234567890" android:inputType="number" android:key="border_radius"      android:title="@string/border_radius"      android:dialogTitle="@string/border_radius" />
        <EditTextPreference android:defaultValue="48" android:digits="1234567890" android:inputType="number" android:key="font_size"          android:title="@string/font_size"          android:dialogTitle="@string/font_size" />
        <EditTextPreference android:defaultValue="32" android:digits="1234567890" android:inputType="number" android:key="hint_font_size"     android:title="@string/hint_font_size"     android:dialogTitle="@string/hint_font_size" />
        <EditTextPreference android:defaultValue="24" android:digits="1234567890" android:inputType="number" android:key="emoticon_font_size" android:title="@string/emoticon_font_size" android:dialogTitle="@string/emoticon_font_size" />
        <EditTextPreference android:defaultValue="24" android:digits="1234567890" android:inputType="number" android:key="unicode_font_size"  android:title="@string/unicode_font_size"  android:dialogTitle="@string/unicode_font_size" />
        <SwitchPreference android:defaultValue="false" android:key="spacebar" android:title="@string/spacebar" />
        <ListPreference android:defaultValue="1" android:entries="@array/theme_names" android:entryValues="@array/theme_keys" android:key="theme" android:title="@string/theme_title" android:dialogTitle="@string/theme_title" />
        <com.custom.keyboard.ColorPreference android:key="background_color" android:title="Background Color" />
        <com.custom.keyboard.ColorPreference android:key="foreground_color" android:title="Text Color" />
        <com.custom.keyboard.ColorPreference android:key="border_color"     android:title="Border Color" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Custom Keys">
        <EditTextPreference android:key="emoticon_recents" android:title="@string/emoticon_recents" />
        <EditTextPreference android:key="unicode_recents" android:title="@string/unicode_recents" />
        <EditTextPreference android:key="emoticon_favorites" android:title="@string/emoticon_favorites" />
        <EditTextPreference android:key="unicode_favorites" android:title="@string/unicode_favorites" />
        <EditTextPreference android:key="custom_keys" android:title="@string/custom_keys_title" />
        <EditTextPreference android:key="popup_first" android:title="@string/popup_first_title" />
        <EditTextPreference android:key="popup_second" android:title="@string/popup_second_title" />
        <EditTextPreference android:key="popup_third" android:title="@string/popup_third_title" />
        <EditTextPreference android:key="name" android:title="@string/name_title" android:dialogTitle="@string/name_title" />
        <EditTextPreference android:key="email" android:title="@string/email_title" android:dialogTitle="@string/email_title" android:inputType="textPassword" />
        <EditTextPreference android:key="password" android:title="@string/password_title" android:dialogTitle="@string/password_title" />
        <EditTextPreference android:key="phone" android:title="@string/phone_title" android:dialogTitle="@string/phone_title" />
        <EditTextPreference android:key="address" android:title="@string/address_title" android:dialogTitle="@string/address_title" />
        <EditTextPreference android:key="k1" android:title="@string/k1_title" android:dialogTitle="@string/k1_title" />
        <EditTextPreference android:key="k2" android:title="@string/k2_title" android:dialogTitle="@string/k2_title" />
        <EditTextPreference android:key="k3" android:title="@string/k3_title" android:dialogTitle="@string/k3_title" />
        <EditTextPreference android:key="k4" android:title="@string/k4_title" android:dialogTitle="@string/k4_title" />
        <EditTextPreference android:key="k5" android:title="@string/k5_title" android:dialogTitle="@string/k5_title" />
        <EditTextPreference android:key="k6" android:title="@string/k6_title" android:dialogTitle="@string/k6_title" />
        <EditTextPreference android:key="k7" android:title="@string/k7_title" android:dialogTitle="@string/k7_title" />
        <EditTextPreference android:key="k8" android:title="@string/k8_title" android:dialogTitle="@string/k8_title" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Hints">
        <SwitchPreference android:defaultValue="true"  android:key="hints" android:title="@string/hints" />
        <SwitchPreference android:defaultValue="true"  android:key="hint1" android:title="@string/hint1" android:dependency="hints" />
        <SwitchPreference android:defaultValue="false" android:key="hint2" android:title="@string/hint2" android:dependency="hints" />
        <SwitchPreference android:defaultValue="false" android:key="hint3" android:title="@string/hint3" android:dependency="hints" />
        <SwitchPreference android:defaultValue="false" android:key="hint4" android:title="@string/hint4" android:dependency="hints" />
    </PreferenceScreen>
    <PreferenceScreen android:title="Advanced">
        <SwitchPreference android:key="debug" android:defaultValue="true" android:title="@string/debug" />
        <Preference android:key="import_preferences" android:title="@string/import_preferences" />
        <Preference android:key="export_preferences" android:title="@string/export_preferences" />
        <EditTextPreference android:key="word_separators" android:title="@string/word_separators_title" android:dialogTitle="@string/word_separators_title" />
        <Preference android:key="reset_clipboard_history" android:title="@string/reset_clipboard_history" />
        <Preference android:key="reset_emoticon_history" android:title="@string/reset_emoticon_history" />
        <Preference android:key="reset_unicode_history" android:title="@string/reset_unicode_history" />
        <Preference android:key="reset_all_preferences" android:title="@string/reset_all_preferences" />
    </PreferenceScreen>
</PreferenceScreen>