<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
    <SwitchPreference           android:title="Indent with Spaces"          android:key="spaces"                    android:defaultValue="true" />
    <PreferenceScreen           android:title="Editing">
        <SwitchPreference       android:title="Prediction"                  android:key="pred"                      android:defaultValue="false" />
        <SwitchPreference       android:title="Autocorrect"                 android:key="auto"                      android:defaultValue="false" />
        <SwitchPreference       android:title="Autocapitalization"          android:key="autocaps"                  android:defaultValue="false" />
        <SwitchPreference       android:title="Insert Pairs"                android:key="pairs"                     android:defaultValue="false" />
        <SwitchPreference       android:title="Toggle Selection Case"       android:key="shift"                     android:defaultValue="false" />
        <SwitchPreference       android:title="Indentation Helper"          android:key="indent"                    android:defaultValue="true" />
        <EditTextPreference     android:title="Word Separators"             android:key="seps"                      android:defaultValue="@string/word_separators" android:dialogTitle="Word Separators" android:summary="@string/word_separators" android:dialogMessage="" />
    </PreferenceScreen>
    <PreferenceScreen           android:title="Behavior">
        <SwitchPreference       android:title="Vibrate"                     android:key="vib"                       android:defaultValue="true" />
        <SwitchPreference       android:title="Show Key Previews"           android:key="preview"                   android:defaultValue="false" />
        <SwitchPreference       android:title="Dynamic Space Bar"           android:key="respace"                   android:defaultValue="false" />
        <SwitchPreference       android:title="Dynamic Layout Page"         android:key="relayout"                  android:defaultValue="true" />
        <SwitchPreference       android:title="Show Layout Names"           android:key="names"                     android:defaultValue="true" />
    </PreferenceScreen>
    <PreferenceScreen           android:title="Layouts">
        <CheckBoxPreference     android:title="All"                         android:key="all"                       android:defaultValue="true" android:summaryOff="Enable All"                     android:summaryOn="Disable All" />
        <PreferenceCategory     android:title="Primary"                     android:key="primary_category">
            <CheckBoxPreference android:title="Accents"                     android:key="accents"                   android:defaultValue="true" />
            <CheckBoxPreference android:title="Emoji"                       android:key="emoji"                     android:defaultValue="true" />
            <CheckBoxPreference android:title="Fancy"                       android:key="fancy"                     android:defaultValue="true" />
            <CheckBoxPreference android:title="Function"                    android:key="function"                  android:defaultValue="true" />
            <CheckBoxPreference android:title="Hex"                         android:key="hex"                       android:defaultValue="true" />
            <CheckBoxPreference android:title="IPA"                         android:key="ipa"                       android:defaultValue="true" />
            <CheckBoxPreference android:title="Macros"                      android:key="macros"                    android:defaultValue="true" />
            <CheckBoxPreference android:title="Navigation"                  android:key="navigation"                android:defaultValue="true" />
            <CheckBoxPreference android:title="Numeric"                     android:key="numeric"                   android:defaultValue="true" />
            <CheckBoxPreference android:title="Shortcuts"                   android:key="shortcuts"                 android:defaultValue="true" />
            <CheckBoxPreference android:title="Symbol"                      android:key="symbol"                    android:defaultValue="true" />
            <CheckBoxPreference android:title="Unicode"                     android:key="unicode"                   android:defaultValue="true" />
            <CheckBoxPreference android:title="Utility"                     android:key="utility"                   android:defaultValue="true" />
            <CheckBoxPreference android:title="URL"                         android:key="url"                       android:defaultValue="true" />
        </PreferenceCategory>
        <CheckBoxPreference     android:title="Custom Layout Order"         android:key="custom_order"              android:defaultValue="false" />
        <EditTextPreference     android:title="Layout Order"                android:key="layout_order"              android:defaultValue="" android:dialogTitle="Layout Order" android:persistent="true" android:lines="5" android:dialogMessage="" />
    </PreferenceScreen>
    <PreferenceScreen           android:title="Debug">
        <SwitchPreference       android:title="Display Char Data"           android:key="show_data"                 android:defaultValue="true" />
        <SwitchPreference       android:title="Even ASCII"                  android:key="show_ascii_data"           android:defaultValue="false" />
        <SwitchPreference       android:title="Debug"                       android:key="debug"                     android:defaultValue="true" />
        <SwitchPreference       android:title="Errors"                      android:key="error"                     android:defaultValue="false" />
    </PreferenceScreen>
    <PreferenceScreen           android:title="Appearance">
        <SwitchPreference       android:title="Transparent"                 android:key="transparent"               android:defaultValue="false" />
        <SwitchPreference       android:title="Borders"                     android:key="borders"                   android:defaultValue="false" />
        <SwitchPreference       android:title="Padding"                     android:key="padding"                   android:defaultValue="false" />
        <SwitchPreference       android:title="Corners"                     android:key="corners"                   android:defaultValue="false" />
        <SwitchPreference       android:title="Background"                  android:key="keyback"                   android:defaultValue="false" />
        <ListPreference         android:title="Theme"                       android:key="theme"                     android:defaultValue="1"                android:entryValues="@array/theme_values"   android:entries="@array/theme" />
        <SwitchPreference       android:title="Use Custom Colors"           android:key="rainbow"                   android:defaultValue="false" />
    </PreferenceScreen>
    <PreferenceScreen       android:title="Hints">
        <SwitchPreference   android:title="Hints"                           android:key="hints"                     android:defaultValue="true" />
        <SwitchPreference   android:title="Hint 1"                          android:key="hint1"                     android:defaultValue="true"  android:dependency="hints" />
        <SwitchPreference   android:title="Hint 2"                          android:key="hint2"                     android:defaultValue="false" android:dependency="hints" />
        <SwitchPreference   android:title="Hint 3"                          android:key="hint3"                     android:defaultValue="false" android:dependency="hints" />
        <SwitchPreference   android:title="Hint 4"                          android:key="hint4"                     android:defaultValue="false" android:dependency="hints" />
    </PreferenceScreen>
    <PreferenceScreen       android:title="Custom Keys">
        <EditTextPreference android:title="Popup 1"                         android:key="popup_first"               android:defaultValue="@string/popup_first"  android:dialogTitle="Popup 1"       android:summary="@string/popup_first"  android:dialogMessage="" />
        <EditTextPreference android:title="Popup 2"                         android:key="popup_second"              android:defaultValue="@string/popup_second" android:dialogTitle="Popup 2"       android:summary="@string/popup_second" android:dialogMessage="" />
        <EditTextPreference android:title="Popup 3"                         android:key="popup_third"               android:defaultValue="@string/popup_third"  android:dialogTitle="Popup 3"       android:summary="@string/popup_third"  android:dialogMessage="" />
        <EditTextPreference android:title="Name"                            android:key="name"                      android:defaultValue="@string/name"         android:dialogTitle="Name"          android:summary="@string/name"         />
        <EditTextPreference android:title="Email"                           android:key="email"                     android:defaultValue="@string/email"        android:dialogTitle="Email"         android:summary="@string/email"        />
        <EditTextPreference android:title="Phone"                           android:key="phone"                     android:defaultValue="@string/phone"        android:dialogTitle="Phone"         android:summary="@string/phone"        />
        <EditTextPreference android:title="Address"                         android:key="address"                   android:defaultValue="@string/address"      android:dialogTitle="Address"       android:summary="@string/address"      />
        <EditTextPreference android:title="Custom Key 1"                    android:key="k1"                        android:defaultValue="@string/k1"           android:dialogTitle="Custom Key 1"  android:summary="@string/k1"           />
        <EditTextPreference android:title="Custom Key 2"                    android:key="k2"                        android:defaultValue="@string/k2"           android:dialogTitle="Custom Key 2"  android:summary="@string/k2"           />
        <EditTextPreference android:title="Custom Key 3"                    android:key="k3"                        android:defaultValue="@string/k3"           android:dialogTitle="Custom Key 3"  android:summary="@string/k3"           />
        <EditTextPreference android:title="Custom Key 4"                    android:key="k4"                        android:defaultValue="@string/k4"           android:dialogTitle="Custom Key 4"  android:summary="@string/k4"           />
        <EditTextPreference android:title="Custom Key 5"                    android:key="k5"                        android:defaultValue="@string/k5"           android:dialogTitle="Custom Key 5"  android:summary="@string/k5"           />
        <EditTextPreference android:title="Custom Key 6"                    android:key="k6"                        android:defaultValue="@string/k6"           android:dialogTitle="Custom Key 6"  android:summary="@string/k6"           />
        <EditTextPreference android:title="Custom Key 7"                    android:key="k7"                        android:defaultValue="@string/k7"           android:dialogTitle="Custom Key 7"  android:summary="@string/k7"           />
        <EditTextPreference android:title="Custom Key 8"                    android:key="k8"                        android:defaultValue="@string/k8"           android:dialogTitle="Custom Key 8"  android:summary="@string/k8"           />
    </PreferenceScreen>
</PreferenceScreen>
